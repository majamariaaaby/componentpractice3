---
const { title, category } = Astro.props;
---

<li>
  <a href="#0">
    <img src="../assets/test.jpg" />
    <!-- <div class="avatar"></div> -->
    <div>
      <p>{title}</p>
      <small>{category}</small>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="m12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8l-8-8z"></path></svg>
  </a>
</li>

<style>
  a {
    display: flex;
    padding: 1rem;
    gap: 1.25rem;
    align-items: center;
    border-radius: 0.75rem;

    &:hover {
      background: #f1f5f9;
    }
  }

  .avatar {
    aspect-ratio: 1;
    width: 2.5rem;
    border-radius: 0.375rem;
    background: #cbd5e1;
  }

  p {
    font-weight: 600;
    color: #1e293b;
  }

  small {
    color: #94a3b8;
  }

  svg {
    color: black;
    width: 2rem;
    height: 2rem;
    margin-left: auto;
    transition: 0.2s;

    :not(:hover) > & {
      opacity: 0;
      translate: -50%;
    }

    img {
    }
  }
</style>
